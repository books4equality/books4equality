<script>
    function sticky_relocate() {
      var window_top = $(window).scrollTop();
      var div_top = $('#content-anchor').offset().top;
      if (window_top > div_top) {
        $('#mission-sidebar-nav').addClass('stick');
        $('#mission-sidebar-nav-phantom').show();
      } else {
        $('#mission-sidebar-nav').removeClass('stick');
        $('#mission-sidebar-nav-phantom').hide();
      }
    }

    $(function () {
      $(window).scroll(sticky_relocate);
      sticky_relocate();
    });
</script>