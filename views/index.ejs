<% layout('./layout') -%>

<div class='headline center-block'>
  <img src='/images/logo-big.png' class='img-responsive' alt="Books 4 Equality">
  <p class='lead'>Your Free Textbook Library</p>
</div>

<div class='jumbotron'>
  <p class='lead'>
	Books4Equality aims to provide equal access to textbooks for everyone. For FREE!
  </p>
  <p>We lend you books for the semester at no cost, so you can focus on classes.
  </p>
	
  <p><br>Storage costs money, have a few dollars to share?</p>

    <% if (config.paypal.hosted_button_id) { %>
    <div class='col-xs-12'>
      <form action='https://www.paypal.com/cgi-bin/webscr' method='post' target='_top'>
        <input type='hidden' name='cmd' value='_s-xclick'>
        <input type='hidden' name='hosted_button_id' value='<%= config.paypal.hosted_button_id %>'>
        <input type='image' src='https://www.paypalobjects.com/webstatic/en_US/btn/btn_donate_92x26.png' name='submit' alt='Donate to books4equality'>
      </form>
    </div>
    <% } %>


  <p>Books4Equality is a certified Non-profit organization.</p>
  <p class='lead'><strong>Help keep the pages turning!</strong></p>
</div>
