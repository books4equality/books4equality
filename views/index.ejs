<% layout('./layout') -%>

<style>
.headline {
  max-width: 80%;
}
</style>

<div class='headline center-block'>
  <img src='/images/logo-big.png' class='img-responsive'>
  <p class='lead'>Equal Access to textbooks for Everyone.<b>For Free.</b></p>
</div>

<div class='jumbotron'>
  <p class='lead'>
  Books4Equality finds the best textbooks so you don't have to.<br>  <strong>Get next semester's textbooks for free.</strong>
  </p>

  <div class='demo-row row'>
    <div class='col-xs-3'>
      <a class='btn btn-block btn-lg btn-primary'
         title='Email us and we will work together to organize a pickup whenever you are available'
         href='mailto:books4equality@gmail.com?body=For a book donation, please indicate Day, Time and Location and we will take care of everything else. Thank you! Books4Equality'>
         Give
      </a>
    </div>
     <div class='col-xs-1'>
        or
     </div>
     <div class='col-xs-3'>
      <a class='btn btn-block btn-lg btn-primary'
         title='Send us you semesters class schedule and we get you your textbooks for free!'
         href='mailto:books4equality@gmail.com?body=What classes are you planning on taking? Please give us the official Class Number from the UVM Course Catalogue. Thank you! Books4Equality'>
         Get 
      </a>
    </div>
    <% if (config.paypal.hosted_button_id) { %>
    <div class='col-xs-3'>
      <form action='https://www.paypal.com/cgi-bin/webscr' method='post' target='_top'>
        <input type='hidden' name='cmd' value='_s-xclick'>
        <input type='hidden' name='hosted_button_id' value='<%= config.paypal.hosted_button_id %>'>
        <input type='image' src='https://www.paypalobjects.com/en_US/i/btn/btn_donateCC_LG.gif' border='0' name='submit' alt='Donate to books4equality'>
      </form>
    </div>
    <% } %>
  </div>

  <p class='lead'><strong>Help keep the pages turning!</strong></p>
</div>
